{
	"name": "@vibehooks/react",
	"type": "module",
	"version": "0.0.1",
	"description": "Modern and unopinionated React hooks with a focus on developer experience.",
	"author": "Sebastian Marat Urdanegui Bisalaya <sebasurdanegui@gmail.com>",
	"license": "MIT",
	"homepage": "https://vibehooks.sebastianurdanegui.com",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SebastianUrdaneguiBisalaya/vibehooks.git"
	},
	"bugs": {
		"url": "https://github.com/SebastianUrdaneguiBisalaya/vibehooks/issues"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"packageManager": "pnpm@10.23.0",
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"typecheck": "tsc --noEmit",
		"release": "bumpp && pnpm publish",
		"prepublishOnly": "pnpm run build",
		"prettier-check": "prettier --check .",
		"prettier-fix": "prettier --write .",
		"lint": "eslint .",
		"lint-fix": "eslint . --fix"
	},
	"peerDependencies": {
		"react": "^19.2.0",
		"react-dom": "^19.2.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@tsconfig/strictest": "^2.0.8",
		"@types/node": "^25.0.3",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"bumpp": "^10.3.2",
		"eslint": "^9.39.2",
		"eslint-plugin-perfectionist": "^5.4.0",
		"eslint-plugin-react": "^7.37.5",
		"globals": "^17.0.0",
		"prettier": "3.7.4",
		"tsdown": "^0.18.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.1"
	}
}
